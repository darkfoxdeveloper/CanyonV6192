            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Bin/net7.0/Canyon.Ai.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Canyon.Ai",
            "console": "externalTerminal",
            "stopAtEntry": false,
