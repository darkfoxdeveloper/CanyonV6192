             "cwd": "${workspaceFolder}/src/Canyon.Login",
             "console": "externalTerminal",
             "stopAtEntry": false,
         },
         {
             "name": "Launch Game",
             "type": "coreclr",
             "request": "launch",
             "preLaunchTask": "build",
             "program": "${workspaceFolder}/src/Bin/net7.0/Canyon.Game.dll",
             "args": [],
